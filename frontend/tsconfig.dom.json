{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "esnext",

    "esModuleInterop": true,
    "isolatedModules": true,
    "paths": { "@/*": ["./src/*"] },
    "verbatimModuleSyntax": true,

    "skipLibCheck": true,
    "strict": true,
    "types": [], // XXX: Should be populated with the types used in the project in order for `tsc` to pick them up but it seems that `tsc` picks up on everything in `node_modules/@types` anyway (see https://github.com/microsoft/TypeScript/issues/37708)

    "composite": true,
    "noEmit": true
  },
  "include": ["src/**/*.ts", "src/**/*.vue"]
}
