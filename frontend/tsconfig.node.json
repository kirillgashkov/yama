{
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "esnext",

    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "skipLibCheck": true,
    "strict": true,
    "types": [], // XXX: Should be populated with the types used in the project in order for `tsc` to pick them up but it seems that `tsc` picks up on everything in `node_modules/@types` anyway (see https://github.com/microsoft/TypeScript/issues/37708)

    "allowJs": true,
    "checkJs": true,
    "composite": true,
    "noEmit": true
  },
  "include": ["eslint.config.js", "types/**/*.d.ts", "vite.config.ts"] // XXX: Probably should include only the types used in the project but we are being consistent with the `compilerOptions.types` field
}
