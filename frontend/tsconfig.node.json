{
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "esnext",

    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "skipLibCheck": true,
    "strict": true,

    "allowJs": true,
    "checkJs": true,
    "composite": true,
    "noEmit": true
  },
  "include": ["eslint.config.js", "vite.config.ts"]
}
